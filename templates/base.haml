  %body

    -block filter_bar

    <!-- container -->
    #content.container.snap-content{style: 'background: url("{{ STATIC_URL }}images/white.png") no-repeat scroll center 75% #FFFFFF;'}
      .row
        .twelve.columns
          %h2
            %a{"style": "color: black", "href": "{% url 'home' %}"}
              %center.love
                -block h1_title
                  Belgium Hacker Agenda

      -block container
        .row
          .twelve.columns
            -block content

      %footer.row
        %div{"style": "text-align: center;"}
          -block footer
            %span.love
              %a{'href': '{% url "administration_dashboard" %}'}
                Admin
            %br
            %span.love
              Made with
              %span{"style": "color: pink"}❤
              by
              %a{href: "http://worlddomination.be"} Bram
              with the help of
              %a{href: "https://github.com/Psycojoker/hackeragenda/graphs/contributors"} awesome contributors
            %br
            %span.love
              %a{href: "https://github.com/Psycojoker/hackeragenda"} sauce

